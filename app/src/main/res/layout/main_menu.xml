<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_trans">

    <Button
        android:id="@+id/btnMenuNew"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="New"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/btnMenuGallery"
        android:layout_alignStart="@+id/btnMenuGallery" />

    <Button
        android:id="@+id/btnMenuGallery"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Gallery"
        android:layout_below="@+id/btnMenuNew"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/btnExit"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Exit"
        android:layout_below="@+id/btnMenuGallery"
        android:layout_centerHorizontal="true" />

</RelativeLayout>